{% extends "ShopAdminBundle::layout.html.twig" %}

{% block title %}Адреса{% endblock %}

{% block page_container %}
    <div class="medium primary btn">
        <a href="{{ path('shop_admin_address') }}">
            Добавить адрес
        </a>
    </div>
    {% if addresses %}
        <table style="margin: 10px 0">
            <thead>
            <tr>
                <th>Адрес</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for address in addresses %}
                <tr>
                    <td>{{ address.name }}</td>
                    <td>
                        <div class="medium btn default" style="width: 100%">
                            <a href="{{ path('shop_admin_address', {'id' : address.id}) }}">
                                Изменить
                            </a>
                        </div>
                        <div class="medium btn danger" style="width: 100%">
                            <a href="{{ path('shop_admin_delete_address', {'id' : address.id}) }}" onclick="return confirm('Вы уверены, что хотите удалить?')">
                                Удалить
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
