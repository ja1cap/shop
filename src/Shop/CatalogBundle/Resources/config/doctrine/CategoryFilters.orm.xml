<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Shop\CatalogBundle\Entity\CategoryFilters">

        <indexes>
            <index columns="categoryId"/>
            <index columns="slug"/>
        </indexes>

        <!--<unique-constraints>-->
            <!--<unique-constraint columns="categoryId,slug" name="category_filters_slug" />-->
        <!--</unique-constraints>-->

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" column="name" type="string"/>
        <field name="categoryId" type="integer" column="categoryId"/>
        <field name="slug" type="string" column="slug" length="255" unique="true"/>

        <field name="manufacturerFilter" type="json_array" column="manufacturerFilter" nullable="true"/>
        <field name="parameterFilters" type="json_array" column="parameterFilters" nullable="true"/>
        <field name="priceRangeFilter" type="json_array" column="priceRangeFilter" nullable="true"/>

        <many-to-one target-entity="Category" field="category">
            <join-columns>
                <join-column name="categoryId" referenced-column-name="id"/>
            </join-columns>
        </many-to-one>

    </entity>
</doctrine-mapping>
