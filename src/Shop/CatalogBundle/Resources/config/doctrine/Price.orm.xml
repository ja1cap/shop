<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Shop\CatalogBundle\Entity\Price">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="proposalId" type="integer" column="proposal_id"/>
        <field name="value" type="integer" column="value"/>

        <one-to-many target-entity="ParameterValue" mapped-by="price" field="parameterValues">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>
        <many-to-one target-entity="Proposal" field="proposal"/>

    </entity>
</doctrine-mapping>
