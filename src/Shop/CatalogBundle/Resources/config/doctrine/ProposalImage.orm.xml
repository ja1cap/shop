<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Shop\CatalogBundle\Entity\ProposalImage">
        <field name="proposalId" type="integer" column="proposalId"/>
        <many-to-one target-entity="Proposal" field="proposal">
            <join-columns>
                <join-column name="proposalId" referenced-column-name="id" on-delete="CASCADE"/>
            </join-columns>
        </many-to-one>
    </entity>
</doctrine-mapping>
