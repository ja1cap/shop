<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="shop.catalog.form.type.shipping_method.class">Shop\CatalogBundle\Form\Type\ShippingMethodType</parameter>
    </parameters>

    <services>
        <service id="shop.catalog.form.type.shipping_method" class="%shop.catalog.form.type.shipping_method.class%">
            <tag name="form.type" alias="shipping_method" />
            <argument type="service" id="weasty.geonames.country.repository" />
            <argument type="service" id="weasty.geonames.city.repository" />
            <argument>%country_code%</argument>
            <argument>%locale%</argument>
        </service>
    </services>

</container>
