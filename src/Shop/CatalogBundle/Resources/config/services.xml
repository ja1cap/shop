<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="shop.catalog.price.currency.converter.class">Shop\CatalogBundle\Converter\ShopPriceCurrencyConverter</parameter>
    </parameters>

    <services>

        <service id="shop.catalog.price.currency.converter"
                 class="%shop.catalog.price.currency.converter.class%">
            <argument type="service" id="weasty.money.currency.rate.repository"/>
            <argument type="service" id="weasty.money.currency.code.converter"/>
        </service>

        <service id="shop.catalog.twig.price_extension" class="Shop\CatalogBundle\Twig\ShopPriceExtension">
            <tag name="twig.extension"/>
            <argument type="service" id="weasty.money.currency.resource"/>
            <argument type="service" id="weasty.money.currency.code.converter"/>
            <argument type="service" id="shop.catalog.price.currency.converter"/>
        </service>

    </services>

</container>
