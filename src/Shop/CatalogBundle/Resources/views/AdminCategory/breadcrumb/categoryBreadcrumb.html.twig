<div class="breadcrumb">
    <ul>
        {% block breadcrumb_items %}
            <li class="medium btn default">
                <a href="{{ path('categories') }}">
                    Каталог
                </a>
            </li>
            <li class="medium btn default">
                <a href="{{ path('category', {'id' : category.id}) }}">
                    {{ category.name|default((title is defined ? title : null))|capitalize }}
                </a>
            </li>
        {% endblock %}
    </ul>
</div>
