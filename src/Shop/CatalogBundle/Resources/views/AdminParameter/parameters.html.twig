{% extends "ShopMainBundle:Admin:layout.html.twig" %}

{% block title %}Управление параметрами{% endblock %}

{% block main_container %}

    <div class="medium primary btn">
        <a href="{{ path('parameter') }}">
            Добавить параметр
        </a>
    </div>

    {% if parameters %}
        <table style="margin: 10px 0;">
            <tbody>
            {% for parameter in parameters %}
                <tr>
                    <td>
                        {{ parameter.name }}
                    </td>
                    <td>
                        <div class="medium btn default icon-left entypo icon-pencil">
                            <a href="{{ path('parameter', {'id' : parameter.id}) }}">
                                Изменить
                            </a>
                        </div>
                        <div class="medium btn danger icon-left entypo icon-trash">
                            <a href="{{ path('delete_parameter', {'id' : parameter.id}) }}" onclick="return confirm('Вы уверены, что хотите удалить?')">
                                Удалить
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}

{% endblock %}
