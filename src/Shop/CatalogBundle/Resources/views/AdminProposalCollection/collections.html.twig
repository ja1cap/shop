{% extends "ShopCatalogBundle:AdminCategory:catalogLayout.html.twig" %}

{% block page_content %}
    <div class="page-buttons">
        <a href="{{ path('proposal_collection') }}" class="btn btn-default">
            Добавить коллекцию
        </a>
    </div>
    {% if collections %}
        <table class="table table-striped table-vmiddle">
            <tbody>
                {% for collection in collections %}
                    <tr>
                        <td>
                            <a href="{{ path('proposal_collection', {'id' : collection.id}) }}" class="primary-link">
                                {{ collection.name }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ app.request.scheme ~ '://' ~ app.request.host ~ path('shop_catalog_category', {'slug':collection.slug}) }}" target="_blank">
                                {{ app.request.scheme ~ '://' ~ app.request.host ~ path('shop_catalog_category', {'slug':collection.slug}) }}
                            </a>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="{{ path('proposal_collection', {'id' : collection.id}) }}" class="btn btn-default">
                                    <span class="glyphicon glyphicon-pencil"></span> Изменить
                                </a>
                                <a href="{{ path('delete_proposal_collection', {'id' : collection.id}) }}" onclick="return confirm('Вы уверены, что хотите удалить?')" class="btn btn-danger">
                                    <span class="glyphicon glyphicon-trash"></span> Удалить
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
