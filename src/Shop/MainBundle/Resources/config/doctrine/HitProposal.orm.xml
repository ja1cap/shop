<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Shop\MainBundle\Entity\HitProposal">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="main_title" type="string" nullable="true"/>
        <field name="main_description" type="string" nullable="true"/>
        <field name="main_img_file_name" type="string" nullable="true"/>

        <field name="legend" type="string" nullable="true"/>
        <field name="name" type="string" nullable="true"/>
        <field name="short_description" type="string" nullable="true"/>
        <field name="description" type="text" nullable="true"/>
        <field name="image_file_name" type="string" nullable="true"/>
        <field name="discount_price" type="string" nullable="true"/>
        <field name="regular_price" type="string" nullable="true"/>
        <field name="price_legend" type="string" nullable="true"/>
        <field name="bonus" type="string" nullable="true"/>
        <field name="bonus_image_file_name" type="string" nullable="true"/>

        <field name="timer_legend" type="string" nullable="true"/>
        <field name="timer_end_date" type="datetime" nullable="true"/>

    </entity>
</doctrine-mapping>
