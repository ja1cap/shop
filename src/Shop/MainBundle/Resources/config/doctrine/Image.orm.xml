<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Shop\MainBundle\Entity\Image" inheritance-type="JOINED">

        <discriminator-column name="entityType"/>
        <discriminator-map>
            <discriminator-mapping value="1" class="Shop\CatalogBundle\Entity\ProposalImage"/>
        </discriminator-map>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="imageFileName" type="string" column="imageFileName" length="255"/>
        <field name="thumbImageFileName" type="string" column="thumbImageFileName" length="255" nullable="true"/>

    </entity>
</doctrine-mapping>
