<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Shop\MainBundle\Entity\Proposal" inheritance-type="JOINED" repository-class="Shop\MainBundle\Entity\ProposalRepository">
        
        <discriminator-column name="type"/>
        <discriminator-map>
            <discriminator-mapping value="1" class="Bed"/>
            <discriminator-mapping value="2" class="Mattress"/>
            <discriminator-mapping value="3" class="BedBase"/>
            <discriminator-mapping value="4" class="Pillow"/>
        </discriminator-map>
        
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        
        <field name="title" type="string" column="title" length="255"/>
        <field name="shortDescription" type="string" column="short_description" length="255"/>
        <field name="description" type="text" column="description"/>
        <field name="thumbImageFileName" type="string" column="thumb_image_file_name" length="255" nullable="true"/>
        <field name="imageFileName" type="string" column="image_file_name" length="255" nullable="true"/>

        <field name="showOnHomePage" type="boolean" nullable="true"/>

        <field name="seoTitle" type="string" nullable="true"/>
        <field name="seoDescription" type="text" nullable="true"/>
        <field name="seoKeywords" type="text" nullable="true"/>
        <field name="seoSlug" type="string" nullable="true"/>

        <one-to-many target-entity="AbstractPrice" mapped-by="proposal" field="prices">
            <cascade>
                <cascade-all/>
            </cascade>
            <order-by>
                <order-by-field name="value" direction="ASC"/>
            </order-by>
        </one-to-many>

    </entity>
</doctrine-mapping>
