{% extends "ShopMainBundle:Admin:layout.html.twig" %}

{% block title %}Акции{% endblock %}

{% block right_bar %}
    {{ form(form) }}
    <hr/>
    <div class="medium primary btn">
        <a href="{{ path('action') }}">
            Добавить акцию
        </a>
    </div>
    {% if items %}
        <table style="margin: 10px 0">
            <tbody>
            {% for item in items %}
                <tr>
                    <td style="width: 270px;">
                        <div class="nailthumb-container" style="width: 250px; height: 150px">
                            <img src="{{ item.thumb_image_url }}">
                        </div>
                    </td>
                    <td>
                        {{ item.title }}
                        <br/>
                        <div>
                            <div class="medium btn default" style="width: 49%">
                                <a href="{{ path('action', {'id' : item.id}) }}">
                                    Изменить
                                </a>
                            </div>
                            <div class="medium btn danger" style="width: 49%">
                                <a href="{{ path('action_delete', {'id' : item.id}) }}" onclick="return confirm('Вы уверены, что хотите удалить?')">
                                    Удалить
                                </a>
                            </div>
                        </div>
                        {{ item.description|raw }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
