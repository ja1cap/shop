<div class="header-container">
    <div class="row">
        <div class="header">
            <div class="header-logo">
                <a href="{{ path('shop') }}">
                    <span class="image-wrapper">
                        <img src="{{ settings.logo_url|default('/img/logo.png') }}">
                    </span>
                </a>
            </div>
            <div class="header-menu">
                <ul>
                    {#<li>#}
                        {#<a href="/#main-block">#}
                            {#{{ settings.main_link_text|default('ЧТО?') }}#}
                        {#</a>#}
                    {#</li>#}
                    <li>
                        <a href="{{ path('shop_catalog_categories') }}">
                            {{ settings.more_link_text|default('КАТАЛОГ') }}
                        </a>
                    </li>
                    <li>
                        <a href="/#benefits-block">
                            {{ settings.why_link_text|default('ПОЧЕМУ МЫ?') }}
                        </a>
                    </li>
                    <li>
                        <a href="/#actions-block">
                            {{ settings.actions_link_text|default('АКЦИИ') }}
                        </a>
                    </li>
                    {#<li>#}
                        {#<a href="/#reviews-block">#}
                            {#{{ settings.reviews_link_text|default('ОТЗЫВЫ') }}#}
                        {#</a>#}
                    {#</li>#}
                    {% if settings.contacts_title %}
                        <li>
                            <a href="/#contacts-block">
                                {{ settings.where_link_text|default('КОНТАКТЫ') }}
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
            <div class="header-contacts">
                <div class="phone">
                    {{ settings.phone }}
                </div>
                <div class="callback">
                    <a href="{{ path('callback') }}" class="callback-fancy-box">
                        Заказать обратный звонок
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function(){

        setTimeout(function() {

            if (window.location.hash) {

                var $block = $(window.location.hash),
                    $block_title = $('.block-title', $block);

                if($block.length > 0){
                    $.scrollTo($block, 600, {offset:-90})
                }

            }

        }, 1);

        $('.header-menu a').click(function(e){

            var $block = $($(this).attr('href').substr(1)),
                $block_title = $('.block-title', $block);

            if($block.length > 0){
                e.preventDefault();
                $.scrollTo($block, 600, {offset:-90});
            }

        });

    })
</script>
