{% extends "ShopMainBundle:Admin:layout.html.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block main_container %}
    {{ form(form) }}
    <script>
        $(function(){

            var $shipping_price_orderPriceType = $('#shipping_lifting_price_floorAmountType');
            var $floorRangeContainers = $('#shipping_lifting_price_minFloor, #shipping_lifting_price_maxFloor').closest('div');

            var checkOrderPriceType = function(){

                var shipping_price_orderPriceType = $shipping_price_orderPriceType.find('input:checked').val();

                switch (shipping_price_orderPriceType){
                    case '{{ constant('Shop\\ShippingBundle\\Entity\\ShippingLiftingPrice::FLOOR_AMOUNT_TYPE_ANY') }}':
                        $floorRangeContainers.hide();
                        break;
                    case '{{ constant('Shop\\ShippingBundle\\Entity\\ShippingLiftingPrice::FLOOR_AMOUNT_TYPE_RANGE') }}':
                        $floorRangeContainers.show();
                        break;
                }

            };

            checkOrderPriceType();

            $shipping_price_orderPriceType.find('input').change(checkOrderPriceType);

        });
    </script>
{% endblock %}
