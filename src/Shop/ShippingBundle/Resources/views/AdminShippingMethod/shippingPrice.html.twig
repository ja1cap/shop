{% extends "ShopShippingBundle:AdminShippingMethod:shippingMethodLayout.html.twig" %}

{% block page_content %}
    {{ form(form) }}
    <script>
        $(function(){

            var $shipping_price_orderPriceType = $('#shipping_price_orderPriceType');
            var $orderPricesContainers = $('#shipping_price_minOrderPrice_value, #shipping_price_maxOrderPrice_value').closest('.form-element-weasty-price');

            var checkOrderPriceType = function(){

                var shipping_price_orderPriceType = $shipping_price_orderPriceType.find('input:checked').val();

                switch (shipping_price_orderPriceType){
                    case '{{ constant('Shop\\ShippingBundle\\Entity\\SHippingPrice::ORDER_PRICE_TYPE_ANY') }}':
                        $orderPricesContainers.hide();
                        break;
                    case '{{ constant('Shop\\ShippingBundle\\Entity\\SHippingPrice::ORDER_PRICE_TYPE_RANGE') }}':
                        $orderPricesContainers.show();
                        break;
                }

            };

            checkOrderPriceType();

            $shipping_price_orderPriceType.find('input').change(checkOrderPriceType);

        });
    </script>
{% endblock %}
