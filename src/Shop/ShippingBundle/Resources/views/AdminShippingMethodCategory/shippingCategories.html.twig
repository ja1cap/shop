<div style="margin: 10px 0;">
    <div class="btn secondary small">
        <a href="{{ path('shipping_category', {'shippingMethodId':shippingMethod.id}) }}">
            Добавить доставку для категории
        </a>
    </div>
    <div style="margin: 10px 0 5px;">
        {% for shippingCategory in shippingMethod.categories %}
            <div style="margin: 0 0 10px; padding: 10px; border: 1px solid #e5e5e5">
                <div>
                    {{ weasty_catalog_category_names(shippingCategory.categoryIds) }}
                    <div style="display: inline-block; margin: 0 10px">
                        <div class="btn default small">
                            <a href="{{ path('shipping_category', {'shippingMethodId':shippingMethod.id, 'id':shippingCategory.id}) }}">
                                Изменить
                            </a>
                        </div>
                        <div class="btn danger small">
                            <a href="{{ path('delete_shipping_category', {'id':shippingCategory.id}) }}" onclick="return confirm('Вы уверены, что хотите удалить?')">
                                Удалить
                            </a>
                        </div>
                    </div>
                </div>
                {% include 'ShopShippingBundle:AdminShippingMethodCategory:shippingCategoryPrices.html.twig' with {'shippingPrices' : shippingCategory.prices } %}
                {% include 'ShopShippingBundle:AdminShippingMethodCategory:shippingCategoryLiftingPrices.html.twig' with {'shippingLiftingPrices' : shippingCategory.liftingPrices } %}
            </div>
        {% endfor %}
    </div>
</div>
