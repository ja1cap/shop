{% extends 'ShopShippingBundle:AdminShippingMethod:shippingPrices.html.twig' %}
{% block add_shipping_price_button %}
    <div class="btn secondary small">
        <a href="{{ path('shipping_category_price', {'shippingCategoryId':shippingCategory.id}) }}">
            Добавить стоимость
        </a>
    </div>
{% endblock %}
{% block shipping_price_buttons %}
    <div style="display: inline-block; margin: 0 10px">
        <div class="btn default small">
            <a href="{{ path('shipping_category_price', {'shippingCategoryId':shippingCategory.id, 'id':price.id}) }}">
                Изменить стоимость
            </a>
        </div>
        <div class="btn danger small">
            <a href="{{ path('delete_shipping_category_price', {'id':price.id}) }}" onclick="return confirm('Вы уверены, что хотите удалить?')">
                Удалить стоимость
            </a>
        </div>
    </div>
{% endblock %}
