{% extends 'ShopShippingBundle:AdminShippingMethod:shippingPrices.html.twig' %}
{% block add_shipping_price_button %}
    <a href="{{ path('shipping_category_price', {'shippingCategoryId':shippingCategory.id}) }}" class="btn btn-default">
        {{ 'shop.shipping.method.price.add_btn'|trans([], 'ShopShippingBundle') }}
    </a>
{% endblock %}
{% block shipping_price_buttons %}
    <a href="{{ path('shipping_category_price', {'shippingCategoryId':shippingCategory.id, 'id':price.id}) }}" class="btn btn-default">
        <span class="glyphicon glyphicon-pencil"></span> Изменить
    </a>
    <a href="{{ path('delete_shipping_category_price', {'id':price.id}) }}" onclick="return confirm('Вы уверены, что хотите удалить?')" class="btn btn-danger">
        <span class="glyphicon glyphicon-trash"></span> Удалить
    </a>
{% endblock %}
