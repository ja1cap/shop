<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="weasty.money.currency.code.type.converter.factory.class">Weasty\MoneyBundle\Converter\CurrencyTypeCodeConverterFactory</parameter>
        <parameter key="weasty.money.currency.code.type.converter.iso4217numeric.class">Weasty\MoneyBundle\Converter\CurrencyCodeType\CurrencyTypeIso4217NumericCodeConverter</parameter>
        <parameter key="weasty.money.currency.code.type.converter.iso4217alphabetic.class">Weasty\MoneyBundle\Converter\CurrencyCodeType\CurrencyTypeIso4217AlphabeticCodeConverter</parameter>
        <parameter key="weasty.money.currency.code.converter.class">Weasty\MoneyBundle\Converter\CurrencyCodeConverter</parameter>
        <parameter key="weasty.money.currency.converter.class">Weasty\MoneyBundle\Converter\CurrencyConverter</parameter>
        <parameter key="weasty.money.currency.resource.class">Weasty\MoneyBundle\Data\CurrencyResource</parameter>
        <parameter key="weasty.money.currency.rate.entity.class">Weasty\MoneyBundle\Entity\CurrencyRate</parameter>
        <parameter key="weasty.money.currency.rate.repository.class">Weasty\MoneyBundle\Entity\CurrencyRateRepository</parameter>
        <parameter key="weasty.money.currencies" type="collection">
            <parameter key="BYR" type="collection">
                <parameter key="numericCode">974</parameter>
                <parameter key="symbol">руб</parameter>
            </parameter>
            <parameter key="RUB" type="collection">
                <parameter key="numericCode">643</parameter>
                <parameter key="symbol">руб</parameter>
            </parameter>
            <parameter key="USD" type="collection">
                <parameter key="numericCode">840</parameter>
            </parameter>
            <parameter key="EUR" type="collection">
                <parameter key="numericCode">978</parameter>
            </parameter>
        </parameter>
    </parameters>

    <services>

        <service id="weasty.money.currency.resource" class="%weasty.money.currency.resource.class%">
            <argument>%weasty.money.currencies%</argument>
            <argument>%currency_code%</argument>
            <argument>%locale%</argument>
        </service>

        <service id="weasty.money.currency.rate.repository" class="%weasty.money.currency.rate.repository.class%"
                 factory-service="doctrine.orm.entity_manager"
                 factory-method="getRepository">
            <argument>%weasty.money.currency.rate.entity.class%</argument>
        </service>

        <service id="weasty.money.currency.code.type.converter.factory"
                 class="%weasty.money.currency.code.type.converter.factory.class%">
            <argument type="service" id="weasty.money.currency.resource"/>
            <argument type="collection">
                <argument>%weasty.money.currency.code.type.converter.iso4217numeric.class%</argument>
                <argument>%weasty.money.currency.code.type.converter.iso4217alphabetic.class%</argument>
            </argument>
        </service>

        <service id="weasty.money.currency.code.converter" class="%weasty.money.currency.code.converter.class%">
            <argument type="service" id="weasty.money.currency.code.type.converter.factory"/>
        </service>

        <service id="weasty.money.currency.converter" class="%weasty.money.currency.converter.class%">
            <argument type="service" id="weasty.money.currency.rate.repository"/>
            <argument type="service" id="weasty.money.currency.code.converter"/>
        </service>

        <service id="weasty.money.twig.money_extension" class="Weasty\MoneyBundle\Twig\MoneyExtension">
            <tag name="twig.extension"/>
            <argument type="service" id="weasty.money.currency.resource"/>
            <argument type="service" id="weasty.money.currency.code.converter"/>
            <argument type="service" id="weasty.money.currency.converter"/>
        </service>

        <service id="weasty.money.twig.currency_extension" class="Weasty\MoneyBundle\Twig\CurrencyExtension">
            <tag name="twig.extension"/>
            <argument type="service" id="weasty.money.currency.resource"/>
            <argument type="service" id="weasty.money.currency.code.converter"/>
        </service>

    </services>

</container>
